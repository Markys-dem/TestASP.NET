@model Mark.Models.ModelViews.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-fielter="all">All</button>
        @foreach(var obj in Model.categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ','_')">
                @obj.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach(var toy in Model.toys)
        {
            <partial name="_ToyCard" model="toy" />
        }
    </div>
</div>

