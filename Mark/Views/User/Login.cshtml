@model Mark.Models.User;

<!DOCTYPE html>
<!-- Coding By CodingNepal - codingnepalweb.com -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="~/css/login.css">

    <title>Login & Registration Form</title>
</head>
<body>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="forms">
            <div class="form login">
                <span class="title">Login</span>
                <form asp-action="Sing_In">
                    <div class="input-field">
                        <input asp-for="Email" class="form-control" />
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" asp-for="Password" class="password" />
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>

                    <div class="input-field button">
                        <input type="submit" class="btn btn-info w-100%" value="Login" />
                    </div>
                </form>

                <div class="login-signup">
                    <span class="text">
                        Not a member?
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Registery_form">Signup Now</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/login.js"></script>
</body>
</html>