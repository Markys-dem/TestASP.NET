@model Mark.Models.User;

<!DOCTYPE html>
<!-- Coding By CodingNepal - codingnepalweb.com -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="~/css/Registary.css">*
    <title>Login & Registration Form</title>
</head>
<body>
    <div class="form signup">
        <h1 class="title" style="text-align:center">Registration</h1>
        <form asp-action="Edit_User">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="input-field">
                <input asp-for="Name" class="form-control" required />
                <i class="uil uil-user"></i>
            </div>
            <div class="input-field">
                <div class="col-4">
                    <label asp-for="Surname"></label>
                </div>
                <input asp-for="Surname" class="form-control" required>
                <i class="uil uil-user"></i>
            </div>
            <div class="input-field">
                <div class="col-4">
                    <label asp-for="Email"></label>
                </div>
                <input asp-for="Email" class="form-control" required />
                <i class="uil uil-envelope icon"></i>
            </div>
            <div class="input-field">
                <div class="col-4">
                    <label asp-for="Password"></label>
                </div>
                <input asp-for="Password" class="password" required>
                <i class="uil uil-lock icon"></i>
            </div>

            <div class="input-field button">
                <input type="submit" class="btn btn-info w-100%" value="Edit User" />
            </div>
        </form>
    </div>
</body>
