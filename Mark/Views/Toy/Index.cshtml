@model IEnumerable<Mark.Models.Toy>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Toy</h2>
        </div>
        <div class="col-6">
            <a asp-action="Upsert" asp-controller="Toy">Create new Toy</a>
        </div>
    </div>
    <br />

    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table bordered table-striped" style=" width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td calss="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Create" asp-controller="Toy" asp-route-Id="@obj.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No toy exists.</p>
    }
</div>


